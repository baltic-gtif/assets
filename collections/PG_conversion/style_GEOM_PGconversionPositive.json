      "scaleType": "categorical",
      "markType": "rect",
      "boundTo": { "key": "metric", "value": "classification_2024" }
    }
  ],

  "stroke-width": 1,
  "stroke-color": "#62b83d",

  "jsonform": {
    "type": "object",
    "title": "Data configuration",
    "properties": {
      "metric": {
        "title": "Metric",
        "type": "string",
        "enum": [
            "classification_2024", 
            "source_file"],
        "options": {
          "enum_titles": [
              "Previous Land Use - 2024 (Thematic)", 
              "PG changes - 2025 (Geometric)"]
        },
        "default": "classification_2024"
      }
    }
  },

  "fill-color": [
    "case",

    ["==", ["var", "metric"], "source_file"],
    [
      "case",
      ["!", ["get", "source_file"]], [0, 0, 0, 0],
      ["==", ["get", "source_file"], "one_to_one"], "#f47336",
      ["==", ["get", "source_file"], "new"], "#c90076",
      ["==", ["get", "source_file"], "disappeared"], "#f47336",
      ["==", ["get", "source_file"], "only_merges"], "#f47336",
      ["==", ["get", "source_file"], "only_splits"], "#f1c232",
      ["==", ["get", "source_file"], "other_changes"], "#8b8c89",
      ["==", ["get", "source_file"], "union_other_changes_converted"], "#8b8c89",
      [0, 0, 0, 1]
    ],

    ["==", ["var", "metric"], "classification_2024"],
    [
      "case",
      ["!", ["get", "classification_2024"]], [0, 0, 0, 0],
      ["==", ["get", "classification_2024"], "AL"], "#6a329f",
      ["==", ["get", "classification_2024"], "F"], "#274e13",
      ["==", ["get", "classification_2024"], "PC"], "#bf9000",
      ["==", ["get", "classification_2024"], "TG"], "#d4fa43",
      ["==", ["get", "classification_2024"], "S"], "#a64d79",
      ["==", ["get", "classification_2024"], "W"], "#00fff7",
      ["==", ["get", "classification_2024"], "No category"], "#bcbcbc",
      [0, 0, 0, 1]
    ],
    [215, 235, 215, 0.25]
  ],

  "tooltip": [
    { "id": "ID_2025", "title": "Internal ID - 2025" , "decimals": 0},
    { "id": "ID_2024", "title": "Internal ID - 2024" , "decimals": 0},
    { "id": "PSL_KODAS_2024", "title": "Type - 2024" },
